@model IEnumerable<SpigotCaseStudy.Models.DbModels.MediaItem>

@{
    ViewData["Title"] = "Manage Content";
}
<div class="container">
    <div class="row mb-2 mt-3">
        <div class="col-sm-4">
            <h2>Manage Content</h2>
            <hr />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-12 mb-5">
            <table class="table table-responsive table-striped table-bordered" id="MediaItemTable">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ImageUrl)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LargeImageUrl)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.VideoUrl)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateCreated)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateLastAccessed)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MediaType)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.MediaItemId">Edit</a> <br />
                                <a asp-action="Details" asp-route-id="@item.MediaItemId">Details</a> <br />
                                <a asp-action="Delete" asp-route-id="@item.MediaItemId">Delete</a> <br />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ImageUrl)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LargeImageUrl)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.VideoUrl)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateCreated)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateLastAccessed)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MediaType)
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section scripts{
    <script>
        $(document).ready(function () {
            $('#MediaItemTable').DataTable();
        });
    </script>
}
